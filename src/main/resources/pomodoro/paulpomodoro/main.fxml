<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0"
      prefWidth="700.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pomodoro.paulpomodoro.MainController">
   <Label fx:id="labelTimeLeft" layoutX="304.0" layoutY="136.0" text="00:00">
      <font>
         <Font name="System Bold" size="36.0"/>
      </font>
   </Label>
   <Button fx:id="buttonStart" layoutX="212.0" layoutY="350.0" mnemonicParsing="false" onAction="#onStartButtonClick"
           prefHeight="25.0" prefWidth="77.0" text="Start"/>
   <Button fx:id="buttonStop" disable="true" layoutX="320.0" layoutY="350.0" mnemonicParsing="false"
           onAction="#onStopButtonClick" prefHeight="25.0" prefWidth="77.0" text="Stop"/>
   <Label fx:id="informationMessage" layoutX="22.0" layoutY="347.0" prefHeight="17.0" prefWidth="173.0"
          text="Let's start">
      <font>
         <Font name="System Bold Italic" size="22.0"/>
      </font>
   </Label>
   <PieChart fx:id="pieChart" clockwise="false" labelsVisible="false" layoutX="203.0" layoutY="22.0"
             legendVisible="false" opacity="0.5" prefHeight="281.0" prefWidth="295.0"
             stylesheets="@styles/piechart.css"/>
   <TextArea layoutX="134.0" layoutY="544.0" prefHeight="111.0" prefWidth="448.0" promptText="sss"
             text="1 Определитесь с задачами&#10;2 Установите таймер на 20-25 минут&#10;3 Работайте, ни на что не отвлекаясь&#10;4 Сделайте короткий перерыв (5 минут).&#10;5 После каждого 4-го «помидора» делайте длинный перерыв (15-30 минут).&#10;"/>
   <Button fx:id="buttonSkip" disable="true" layoutX="431.0" layoutY="350.0" mnemonicParsing="false"
           onAction="#onSkipButtonClick" prefHeight="25.0" prefWidth="77.0" text="Skip"/>
   <Label fx:id="labelIfPaused" layoutX="14.0" layoutY="32.0" prefHeight="17.0" prefWidth="173.0">
      <font>
         <Font name="System Bold Italic" size="22.0"/>
      </font>
   </Label>
</Pane>
